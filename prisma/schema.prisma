generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          String @id @default(uuid())
  name        String
  total_seats Int

  bookings Bookings[]
}

model Bookings {
  id         String   @id @default(uuid())
  event_id   String
  user_id    String
  created_at DateTime @default(now())

  event Event @relation(fields: [event_id], references: [id])

  @@unique([event_id, user_id])
}
